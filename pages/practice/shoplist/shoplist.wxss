/* pages/practice/shoplist/shoplist.wxss */
.shop-item{
  display: flex;
  flex-wrap: nowrap;
  padding: 15rpx;
  margin: 15rpx;
  box-shadow: 1rpx 1rpx 15rpx #ddd;
  border-radius: 8rpx;
  border: 1rpx solid #efefef;

}
.thumb image{
  width: 250rpx;
  height: 250rpx;
  display: block;
  margin-right: 15rpx;
}
.info{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  font-size: 24rpx;
  
}