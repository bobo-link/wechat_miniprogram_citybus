/* pages/setting/setting.wxss */
page{
  background-color: #f8f8f8;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
}
.container{
  height:200rpx;
  padding:30rpx 20rpx 0rpx 20rpx;
  
}
.permission{   
  height: 50px;  
  padding:0 0 0 0;
  display: flex;
  align-items: center;
  flex-wrap: nowrap;
  background-color:white;
}
.title {
  margin-left: 10px;
  font-size: 20px;
  font-weight:normal;
}
.info{
  margin-left: 10px;
  font-size: 15px;
  font-weight:normal;  
  color: #bfbfbf;
}
.clear{
  padding-left:10px ;
  font-weight: normal;
  display: flex;
  align-items: center;
  background-color: white;
  height: 50px;
  font-size: 20px;
  border-top: 1px solid #5757573a;
}
.share{
  height: 50px;  
  padding:0 0 0 0;
  display: flex;
  align-items: center;
  flex-wrap: nowrap;
  background-color:white;
}
.btn_hover{
  background-color:rgba(212, 212, 212, 0.658);
}
