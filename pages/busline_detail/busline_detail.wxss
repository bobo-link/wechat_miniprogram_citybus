/* pages/busline_detail/busline_detail.wxss */
.busline--name{
 display: flex;
 justify-content: center;
 font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
 padding-top: 20rpx;
 font-size: large;
 margin-bottom: 10px;
}
.busline--dirction{
  display: flex;
  align-items: center; 
  margin-left: 10px;
  margin-top:10px ;
}
.busline-time{
  display: flex;
  margin: 10px 0 30px 10px;
  margin-top: 10px;
  margin-bottom: 10px;
}
._time{
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 10px;
}
._time view{
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 13px;
  width:18px;
  color: #fff;
  height:18px;
  border-radius:4px ;
}
.start view{
  background:#35d316;
}
.end view{
  background:#e48b05
}
._time text{
  font-size: 13px;
  color: #a4a5a4;
  padding-left: 5px;
}
.busline--stations{
  position: relative;
}
.bus--status{
  z-index: 2;
  margin: 15px 20px 20px 20px;
  height: 100px;
  border-radius:8px ;
  background: rgba(255, 255, 255,0.8);
  position: relative;
  box-sizing: border-box;
  box-shadow: 1rpx 1rpx 15rpx #ddd;
}
.bus--status text{
  z-index: 10;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
  position: absolute;
  left:0px;
  top:0px;
  font-size: larger;
  font-weight: 800;
  font-family:黑体;
  color: rgb(255, 136, 0);
  background-color: rgba(255, 255, 255, 0.7);
}
.bus--status image{
  z-index: 0;
  position: relative;
  width: 100%;
  height: 100%;
  border-radius:10px ;
}
.hide-content-box{
  position:absolute;
  top:0;
  height: 100%;
  width:25px;
  z-index: 2;
}
.hide-content-box-left{
  left:0;
  background-image: linear-gradient(to left,rgba(255,255,255,0) ,#f3f3f3 60%);
}
.hide-content-box-right{
  right:0;
  background-image: linear-gradient(to right,rgba(255,255,255,0) ,#f3f3f3 60%);
}
.bus--line{
  height: 30px;
  display: flex;
  position: relative;
  justify-content: center;
  position: relative;
}

.symbol{
  position:absolute;
  top:50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: content-box;
  width: 20px;
  height: 20px;
  color: #f3f3f3;
  font-size: 13px;
  margin:-10px ;
  border-radius: 3px;
  background: rgb(17, 212, 10);
}
.sense{
  position: absolute;
  top:50%;
  margin: -2px;
  width: 2px;
  height: 2px;
  background-color: transparent; /* 模块背景为透明 */
  border-color: #f5f1f2;
  border-style: solid;
  border-width: 2px 2px 0 0;
  background: linear-gradient(rgb(19, 221, 12), rgb(19, 221, 12)) repeat-x center;
  transform: rotate(45deg); /*箭头方向可以自由切换角度*/
}
.point{
  position: absolute;
  top:50%;
  margin: -6px;
  width: 8px;
  height: 8px;
  border-radius: 50%;
  border: 2px solid #fff;
  background-color: rgb(247, 161, 1);
  box-shadow: 0 0 0 2px rgb(247, 161, 1);
}
.bus--line::before, .bus--line::after {
  display: table-cell;
  content: "";
  width: 50%;
  background: linear-gradient(rgb(19, 221, 12), rgb(19, 221, 12)) repeat-x center;
  background-size: 0.3rem 0.3rem;
}
.bus--line--before::before,.bus--line--after::after{
  background:#f8f8f8
}
.symbol--side{
  width: 20%;
  height: 5px;
  position: absolute;
}

.busuline--staton--content{
  display: flex;
  flex-direction: column;
}
.busline--station{
  justify-content: center;
  padding: 0 20px;
  display: inline-block
}

._index{
  font-size: small;
  margin: auto;
  color: rgb(114, 117, 116 );
}