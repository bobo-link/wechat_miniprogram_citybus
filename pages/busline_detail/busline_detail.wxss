/* pages/busline_detail/busline_detail.wxss */
.busline--name{
 display: flex;
 justify-content: center;
 font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
 padding-top: 20rpx;
 font-size: large;
 margin-bottom: 15px;
}
.busline--dirction{
  display: flex;
  align-items: center; 
  margin-left: 10px;
}
.busline-time{
  display: flex;
  margin: 10px 0 30px 10px;
  margin-top: 10px;
  margin-bottom: 30px;
}
._time{
  display: flex;
  margin-right: 10px;
}
._time text{
  padding-left: 5px;
}
.busline--stations{
  position: relative;
}
.hide-content-box{
  position:absolute;
  top:0;
  height: 100%;
  width:25px;
  z-index: 2;
}
.hide-content-box-left{
  left:0;
  background-image: linear-gradient(to left,rgba(255,255,255,0) ,#f3f3f3 60%);
}
.hide-content-box-right{
  right:0;
  background-image: linear-gradient(to right,rgba(255,255,255,0) ,#f3f3f3 60%);
}
.bus--line{
  display: flex;
  align-items: center;
  justify-items: center;
  background-color: greenyellow;
}
.symbol{
  display: flex;
  margin: 0 auto;
}

.busuline--staton--content{
  display: flex;
  flex-direction: column;
}
.busline--station{
  justify-content: center;
  padding: 0 20px;
  display: inline-block
}

._index{
  font-size: small;
  margin: auto;
  color: rgb(114, 117, 116 );
}