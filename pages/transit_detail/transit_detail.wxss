/* pages/transit_detail/transit_detail.wxss */
._text{
  color: #bbb;
  font-size: 13px;
}
.listBox{
  background-color: #fff;
  display: relative;
  margin-bottom: 20px;
  margin-top: 10px;
  padding: 10px 0;
}
.item{
  display: -webkit-flex;
  display: flex;
  -webkit-flex-flow: row nowrap;
  flex-flow: row nowrap;
  margin-right: 15px;

}
.timeline{
  -webkit-align-items: center;
  align-items: center;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-flow: column nowrap;
  flex-flow: column nowrap;
  -webkit-flex-shrink: 0;
  flex-shrink: 0;
  -webkit-justify-content: center;
  justify-content: center;
  position: relative;
  width: 31px;
}
.lineA{
  background: #e1e1e1;
  bottom: 50%;
  left: 50%;
  position: absolute;
  top: 0;
  width: 1px;
}

.circle{ 
  background: #efefef;
  border: 1px solid #c3c3c3;
  border-radius: 100%;
  -webkit-flex-shrink: 0;
  flex-shrink: 0;
  height: 10px;
  width: 10px;
  z-index: 1;
}
.start_circle{
  background: #4287ff;
  border: 1px solid #4287ff;
}
.end_circle{
  background: #f4040d;
  border: 1px solid #f4040d;
}
.lineB{
  background: #e1e1e1;
  bottom: 0;
  left: 50%;
  position: absolute;
  top: 50%;
  width: 1px;
}
.side{
  background: none;
}
.desc{
  -webkit-align-items: flex-start;
  align-items: flex-start;
  border-bottom: 1px dashed #e1e1e1;
  -webkit-flex-flow: column nowrap;
  flex-flow: column nowrap;
  -webkit-justify-content: flex-start;
  justify-content: flex-start;
  padding: 12px 0 8px 0;
  position: relative;
  width: 100%;
}
.end_desc{
  border-bottom: none
}
.title text{
  color: #000;
  font-size: 15px;
}
.place-name{
  margin:0 5px;
}
.walking{
  background:none;
  border: none;
  padding: 0;
  margin: 5px 0 -2px 0;
}
.busline{
  border-radius: 5px;
  font-size: 15px;
  position: relative;
  width: 100%;
}
._head{
  border-top-left-radius: 3px;
  border-top-right-radius: 3px;
  padding: 8px;
  position: relative;
}
.busline--head{
  background-color: #90d393;
}
.railway--head{
  background-color: #85a6ee
}
.line_circle{
  top:25px;
  position:absolute;
}
.line_title{
  color: #fff;
  font-size: 15px;
  font-weight: 700;
}
._body{
  color: #bbb;
  line-height: 25px;
}
.busline--body{
  background-color: #eef8f1;
}
.railway--body{
  background-color: #edf3fd;
}

._body--stops{
  flex-direction: row;
  padding: 0 10px;
}
.stop{
  padding: 6px 0;
 
}
.stopName{
  color: #000;
  font-weight: 700;
  text-decoration: underline;
}
.more{
  display: flex;
  align-items: center;
  text-align:center
}
.stops{
  padding: 5px 0 0 0;
}
.dot{
  font-size: 20px;
}
.arrival_stop{
  padding-bottom: 10px;
}
swiper,swiper-item{
  overflow: auto !important;
}



